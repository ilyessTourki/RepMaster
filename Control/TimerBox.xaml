<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainSheet.Control.TimerBox">
   <Grid    HorizontalOptions="FillAndExpand"
            HeightRequest="80"
            Margin="10,0">
       <Grid.ColumnDefinitions>
           <ColumnDefinition Width="0.1*"/>
           <ColumnDefinition Width="0.8*"/>
           <ColumnDefinition Width="0.1*"/>
       </Grid.ColumnDefinitions>
       <Frame   HeightRequest="40"
                WidthRequest="40"
                HorizontalOptions="Center"
               VerticalOptions="Center"
                BorderColor="White"
                BackgroundColor="Transparent"
                CornerRadius="50"
                Padding="5">
           <ImageButton Source="{Binding StartStopButtonText}"
               Command="{Binding ToggleTimerCommand}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HeightRequest="25"
                WidthRequest="25"
               BorderColor="Transparent"
               BackgroundColor="Transparent"/>
       </Frame>
       
        <Label Grid.Column="1" HorizontalOptions="Center"
               VerticalOptions="Center"
               Text="{Binding ElapsedTime, StringFormat='{0:hh\\:mm\\:ss}'}"
               TextColor="White"
               FontFamily="Horizon"
                FontAttributes="Bold"
               FontSize="30"/>
       <Frame   HeightRequest="40"
                WidthRequest="40"
                HorizontalOptions="Center"
               VerticalOptions="Center"
                BorderColor="White"
                BackgroundColor="Transparent"
                CornerRadius="50"
                Padding="5"
                Grid.Column="2">
           <ImageButton Source="restart.png"
               Command="{Binding ResetTimerCommand}"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               HeightRequest="20"
                WidthRequest="20"
               BorderColor="Transparent"
               BackgroundColor="Transparent"/>
       </Frame>
    </Grid>
</ContentView>
