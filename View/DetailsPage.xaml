<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrainSheet.View.DetailsPage"
             x:Name="DetailPage"
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="false"
             BackgroundColor="Black">
    <ScrollView>
        <StackLayout>
            <!-- Image -->
            <Frame Padding="0"
                   BorderColor="Transparent"
                   CornerRadius="15"
                    HorizontalOptions="Center"
                        Margin="0,10">
                <Image Source="{Binding machineTrain.image}"
                        HeightRequest="160"
                        WidthRequest="300"
                        Aspect="AspectFill"/>
            </Frame>
            
            <!-- Stats -->
            <StackLayout    Orientation="Horizontal"
                    Margin="5,15"
                    HorizontalOptions="CenterAndExpand">
                <Frame HasShadow="False"
                        CornerRadius="10"
                        HeightRequest="100"
                        WidthRequest="180"
                        Padding="0"
                        Margin="5"
                       BackgroundColor="Black"
                        BorderColor="White">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal"
                Margin="5">
                            <Label Text="&#xea23;"
            FontFamily="Material"
                FontSize="23"
                TextColor="White"
                Margin="5,0"/>
                            <Label Text="Best Lift"
                           FontFamily="Horizon"
                FontSize="10"
                VerticalTextAlignment="Center"
                FontAttributes="Bold"
                TextColor="White"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                 HorizontalOptions="Center">
                            <Label Text="{Binding machineTrain.bestWeight}"
                FontSize="50"
                TextColor="White"
                Margin="5,0"/>
                            <Label Text="/kg"
                FontSize="13"
                FontAttributes="Bold"
                TextColor="White"
                VerticalOptions="End"
                Margin="0,0,0,10"/>
                        </StackLayout>
                    </StackLayout>

                </Frame>
                <Frame HasShadow="False"
                        CornerRadius="10"
                         HeightRequest="100"
                        WidthRequest="180"
                        Padding="0"
                        Margin="5"
                       Background="Black"
                        BorderColor="White">
                    <StackLayout>
                        <StackLayout Orientation="Horizontal"
                Margin="5">
                            <Label Text="&#xe5d5;"
            FontFamily="Material"
                FontSize="23"
                TextColor="White"
                Margin="5,0"/>
                            <Label Text="Best Repetition"
                FontFamily="Horizon"
                FontSize="10"
                VerticalTextAlignment="Center"
                FontAttributes="Bold"
                TextColor="White"/>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal"
                 HorizontalOptions="Center">
                            <Label Text="{Binding machineTrain.bestRepetition.repetion}"
                FontSize="50"
                TextColor="White"
                Margin="5,0"/>
                            <Label  FontSize="13"
                                    FontAttributes="Bold"
                                    
                                    VerticalOptions="End"
                                    Margin="0,0,0,10">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="/" TextColor="White"/>
                                        <Span Text="{Binding machineTrain.bestRepetition.weight}" TextColor="White"/>
                                        <Span Text=" kg" TextColor="White"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </StackLayout>
                    </StackLayout>

                </Frame>

            </StackLayout>

            <!-- Table  Title-->
            <StackLayout Orientation="Horizontal"
                Margin="5,15">
                <Label Text="&#xeb43;"
            FontFamily="Material"
                FontSize="20"
                TextColor="White"
                Margin="5,0"/>
                <Label Text="Training Table :"
                FontFamily="Horizon"
                FontSize="12"
                VerticalTextAlignment="Center"
                FontAttributes="Bold"
                TextColor="White"/>
                <Label Text="&#xe145;"
                FontFamily="Material"
                FontSize="25"
                TextColor="White"
                HorizontalOptions="EndAndExpand"
                Margin="10,0">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding addItem}" />
                    </Label.GestureRecognizers>
                </Label>
            </StackLayout>

            <Grid InputTransparent="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.8*" />
                </Grid.ColumnDefinitions>
                <!-- Sets Numbers -->
                <ListView   ItemsSource="{Binding setsNumber}" 
                RowHeight="100"
                VerticalScrollBarVisibility="Never"
                HorizontalScrollBarVisibility="Never"
                SelectionMode="None">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Label FontAttributes="Bold"
                           FontSize="18"
                           VerticalTextAlignment="Center"
                           HorizontalTextAlignment="Center" >
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Set " TextColor="White"/>
                                            <Span Text="{Binding .}" TextColor="White"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Sets Values -->
                <ListView   ItemsSource="{Binding machineTrain.lastRepetition}" 
                RowHeight="100"
                x:Name="repets"
                Grid.Column="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*" />
                                        <ColumnDefinition Width="0.2*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Nested CollectionView -->
                                    <CollectionView ItemsSource="{Binding}"
                                    VerticalOptions="Center"
                                    SelectionMode="None"
                                    InputTransparent="True">
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate >
                                                <StackLayout Orientation="Horizontal"
                                    VerticalOptions="CenterAndExpand"
                                       HorizontalOptions="CenterAndExpand">
                                                    <Label Text="{Binding repetion}"
                                       FontAttributes="Bold"
                                                           TextColor="White"
                                       FontSize="13"/>
                                                    <Label Text="     x     "
                                                           TextColor="White"
                                       FontAttributes="Bold"
                                       FontSize="13"/>
                                                    <Label 
                                       FontAttributes="Bold"
                                       FontSize="13">
                                                        <Label.FormattedText>
                                                            <FormattedString>
                                                                <Span Text="{Binding weight}" TextColor="White"/>
                                                                <Span Text=" Kg" TextColor="White" />
                                                            </FormattedString>
                                                        </Label.FormattedText>
                                                    </Label>

                                                </StackLayout>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>

                                    </CollectionView>

                                    <!-- Another Static Label -->
                                    <StackLayout Orientation="Horizontal"
                                HorizontalOptions="CenterAndExpand"
                                VerticalOptions="CenterAndExpand"
                                Grid.Column="1">
                                        <Button CornerRadius="5"
                                HeightRequest="50"
                                WidthRequest="50"
                                FontSize="20"
                                Margin="2"
                                Text="&#xe872;"
                                TextColor="DarkRed"
                                                BorderColor="DarkRed"
                                                BorderWidth="1"
                                FontFamily="Material"
                                BackgroundColor="Black"
                                Command="{Binding BindingContext.deleteSet, Source={x:Reference DetailPage}}"
                                CommandParameter="{Binding}"/>
                                    </StackLayout>

                                    <Grid.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding BindingContext.exerciceEditor, Source={x:Reference DetailPage}}"
                                          CommandParameter="{Binding}"/>
                                    </Grid.GestureRecognizers>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Grid>

        </StackLayout>
    </ScrollView>

</ContentPage>